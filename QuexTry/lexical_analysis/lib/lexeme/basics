#ifndef QUEX_INCLUDE_GUARD_Calc_lexer__LEXEME__BASICS
#define QUEX_INCLUDE_GUARD_Calc_lexer__LEXEME__BASICS



/* HINT: If compiler complaints about non-existing 'lexeme_length' function,
 *       then this is probably caused by a user-defined token class file which
 *       does not include 'quex/code_base/lexeme.i'                           */
 size_t 
Calc_lexer_lexeme_length(const Calc_lexer_lexatom_t* Str);


 Calc_lexer_lexatom_t*
Calc_lexer_lexeme_clone(const Calc_lexer_lexatom_t* BeginP,
                        size_t                   Length);

 size_t 
Calc_lexer_lexeme_compare(const Calc_lexer_lexatom_t* it0, 
                          const Calc_lexer_lexatom_t* it1);



#endif /* QUEX_INCLUDE_GUARD_Calc_lexer__LEXEME__BASICS */

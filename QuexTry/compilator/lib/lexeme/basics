#ifndef QUEX_INCLUDE_GUARD_compilator__LEXEME__BASICS
#define QUEX_INCLUDE_GUARD_compilator__LEXEME__BASICS



/* HINT: If compiler complaints about non-existing 'lexeme_length' function,
 *       then this is probably caused by a user-defined token class file which
 *       does not include 'quex/code_base/lexeme.i'                           */
inline size_t 
compilator_lexeme_length(const compilator_lexatom_t* Str);


inline compilator_lexatom_t*
compilator_lexeme_clone(const compilator_lexatom_t* BeginP,
                        size_t                   Length);

inline size_t 
compilator_lexeme_compare(const compilator_lexatom_t* it0, 
                          const compilator_lexatom_t* it1);



#endif /* QUEX_INCLUDE_GUARD_compilator__LEXEME__BASICS */

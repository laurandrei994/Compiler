#ifdef __cplusplus

#include "quexProcessed/lib/buffer/bytes/ByteLoader"



template <class StreamType>
class quexProcessed_ByteLoader_stream { 
public:
    quexProcessed_ByteLoader  base;
    StreamType*            input_handle;
};

template <class StreamType> inline void
quexProcessed_ByteLoader_stream_construct(quexProcessed_ByteLoader_stream<StreamType>* me, StreamType* sh);
template <class StreamType> inline quexProcessed_ByteLoader*
quexProcessed_ByteLoader_stream_new(StreamType* sh);
inline quexProcessed_ByteLoader*    
quexProcessed_ByteLoader_stream_new_from_file_name(const char* FileName);



#endif /* __cplusplus                           */
#endif /*  QUEX_INCLUDE_GUARD_quexProcessed__BUFFER__BYTES__BYTE_LOADER_STREAM */
